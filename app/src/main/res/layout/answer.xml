<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp" >
    <LinearLayout
        android:id="@+id/answerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/answerUserContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@color/background_material_light">

            <ImageView
                android:id="@+id/answerUserCharacter"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:scaleType="centerInside"
                android:src="@drawable/temp_char"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anonymous\nLv1"
                android:id="@+id/questionUserClass" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/answerTextContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/head_desc_answers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/questionUserContainer"
                android:layout_marginLeft="5dp"
                android:textSize="16dp"
                android:textColor="#000000" />
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />
            <LinearLayout
                android:id="@+id/answerLikeContainer"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/echo"
                    android:layout_height="wrap_content"
                    android:layout_width="60dp"
                    />
                <Button
                    android:id="@+id/reply"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="reply"
                    />
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>
    <ListView
        android:id="@+id/followuplist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/answerContainer"
        android:layout_marginLeft="20dp" />

    <LinearLayout
        android:id="@+id/followuplistFooter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/followuplist"
        android:paddingLeft="40dp">

        <ImageButton
            android:id="@+id/followupuploadImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_gallery"/>

        <EditText
            android:id="@+id/followupmessageInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textShortMessage"
            android:lines="1"
            android:singleLine="true"
            android:hint="Give follow-up reply"/>

        <ImageButton
            android:id="@+id/followupsendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_send" />
    </LinearLayout>
</RelativeLayout>