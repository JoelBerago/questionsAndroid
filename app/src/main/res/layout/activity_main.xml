<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/listFooter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:background="#333">

        <LinearLayout
            android:id="@+id/profileCharacterLayout"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/profileCharacter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/temp_char"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Knight Lv 1"
                android:id="@+id/profileCharacterClass"
                android:textStyle="bold"
                android:textColor="#fff" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/footerTextLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <EditText
                android:id="@+id/messageInput"
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="4"
                android:minLines="4"
                android:gravity="top|left"
                android:layout_weight="1"
                android:scrollbars="vertical"
                android:hint="Add new question/answer/reply. Press the button you want to send to."
                android:textColor="#fff"
                android:textColorHint="#555" />

            <LinearLayout
                android:id="@+id/footerButtonLayout"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:gravity="right"
                android:weightSum="1">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:id="@+id/selected_picture"
                    android:layout_weight="0.32"
                    android:layout_gravity="center_vertical"/>

                <Button
                    android:id="@+id/uploadImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Image"
                    android:onClick="selectImage"/>

                <Button
                    android:id="@+id/sendButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Post Question"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>




    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/mainActivityFooter"
        android:layout_below="@+id/listFooter" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/mainActivityFooter"
        android:layout_alignParentBottom="true"
        android:background="#333">


        <Button
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:onClick="Close"
            android:text = "&lt; Leave Room  "
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="#eee" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room Name"
            android:id="@+id/txt_room_name"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:textColor="#fff"
            android:textSize="20dp" />
    </RelativeLayout>


</RelativeLayout>
